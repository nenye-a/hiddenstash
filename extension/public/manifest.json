{
  "manifest_version": 2,
  "name": "HiddenStash Chrome Extension",
  "description": "",
  "version": "1.0",
  "browser_action": {
    "default_icon": "./hiddenstash-icon.png",
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/contentScript.js"]
    },
    {
      "matches": ["http://*.amazon.com/*", "https://*.amazon.com/*"],
      "js": ["js/amazonContentScript.js"]
    }
  ],
  "permissions": ["storage", "<all_urls>"],
  "web_accessible_resources": ["assets/*.png"]
}
